{
    "name": "My YT Bookmarks",
    "version": "0.0.1",
    "description": "Save timestamps in YouTube videos.",
    "permissions": ["tabs"],
    "host_permissions": ["https://*.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["contentScript.js"],
        "run_at": "document_start"
      }
    ],
    "web_accessible_resources": [
      {
        "matches": ["https://*.youtube.com/*"],
        "resources": [
          "assets/bookmark.png"
        ]
      }
    ],
    "manifest_version": 3
}